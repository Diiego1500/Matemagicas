{% extends 'base.html.twig' %}
{% block title %}Cambiar contraseña{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container ">
        <div class="jumbotron text-center">
            <h4>Casi has terminado, completa los campos para recuperar tu cuenta</h4>
            <div class="text-left mt-5">
                <label>Nombre de usuario: </label>{{ userName }}
            </div>
            {% for flash_message in app.session.flashbag.get('warning') %}
                <div class="alert alert-danger mt-3">
                    <strong>{{ flash_message }}</strong>
                </div>
            {% endfor %}
            <div class="jumbotron text-left">
                {{ form_start(form) }}
                <div class="form-group">
                    <label class="text-left">Email </label>
                    {{ form_widget(form.email,{attr:{'class':'form-control', 'placeholder':'Ingresa tu Email'}}) }}
                </div>
                <div class="form-group">
                    <label class="text-left">Contraseña: </label>
                    {{ form_widget(form.Pass,{attr:{'class':'form-control', 'placeholder':'Ingresa tu nueva contraseña'}}) }}
                </div>
                <div class="form-group text-center">

                    {{ form_widget(form.Enviar,{attr:{'class':'btn btn-success'}}) }}
                </div>


                {{ form_widget(form.Enviar) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}